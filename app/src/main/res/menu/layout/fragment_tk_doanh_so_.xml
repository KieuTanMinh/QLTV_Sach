<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/backgroud"
    android:gravity="center_horizontal"
    tools:context=".Fragment.TKDoanhSo_Fragment">

    <ImageView
        android:src="@drawable/img"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_TuNgay"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#E91E63"
            android:text="Từ Ngày"/>

        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/edt_TuNgay"
            android:layout_width="match_parent"
            android:background="@drawable/custom3"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_DenNgay"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#E91E63"
            android:text="Đến ngày"/>

        <EditText
            android:id="@+id/edt_DenNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom3"
            android:layout_marginTop="8dp"
             />
    </LinearLayout>
    <Button
        android:id="@+id/btn_find"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#FF0000"
        android:text="TÌM KIẾM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:text="Doanh Thu :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_DoanhThu"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:layout_weight="2"
            android:background="@drawable/custom3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>